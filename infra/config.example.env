# ===== Lex Lab Bootstrap Config =====
# 필수
AWS_REGION=ap-northeast-2
BOT_NAME=AcademyReservationBot
BOT_DESCRIPTION="학원 예약/상담 봇 (실습)"
LOCALE_ID=ko_KR

# Lex가 Assume할 IAM Role (없으면 스크립트가 생성 시도)
LEX_ROLE_NAME=LexLabServiceRole

# 선택: Alias에 Lambda CodeHook 연결 (Fulfillment)
# - lambda/fulfillment.js 를 Lambda로 배포한 ARN을 넣으세요.
LAMBDA_ARN=

# Alias/버전
BOT_ALIAS_NAME=DEV
IDLE_SESSION_TTL=300
NLU_CONFIDENCE=0.40

# 슬롯타입 값(원하면 추가/수정)
BRANCH_VALUES="강남점,홍대점,잠실점,분당점,인천점"
COURSE_VALUES="토익,오픽,영어회화,일본어,자격증"
